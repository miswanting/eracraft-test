# eracraft-sdk

name: Tag to Release

on:
  push:
    tags:
      - v*

jobs:
  build:
    permissions:
      contents: write
    strategy:
      fail-fast: false
      matrix:
        include:
          - platform: windows-latest
            args: ''
          - platform: ubuntu-latest
            args: ''
          # - platform: macos-latest # for Arm based macs (M1 and above).
          #   args: --target aarch64-apple-darwin
          # - platform: macos-latest # for Intel based macs.
          #   args: --target x86_64-apple-darwin

    runs-on: ${{ matrix.platform }}
    steps:
      - uses: actions/checkout@v5

      - uses: pnpm/action-setup@v4

      - name: Setup node (lts)
        uses: actions/setup-node@v4
        with:
          node-version: lts/*
          cache: pnpm # or pnpm / yarn

      - name: Setup rust (stable)
        uses: dtolnay/rust-toolchain@stable
        with:
          # Those targets are only used on macos runners so it's in an `if` to slightly speed up windows and linux builds.
          targets: ${{ matrix.platform == 'macos-latest' && 'aarch64-apple-darwin,x86_64-apple-darwin' || '' }}

      - name: Install dependencies (ubuntu only)
        if: matrix.platform == 'ubuntu-latest' # This must match the platform value defined above.
        run: |
          sudo apt-get update
          sudo apt-get install -y libwebkit2gtk-4.1-dev libappindicator3-dev librsvg2-dev patchelf

      - name: Setup Pages
        if: matrix.platform == 'ubuntu-latest' # This must match the platform value defined above.
        uses: actions/configure-pages@v4

      - name: Install frontend dependencies
        run: |
          pnpm i
          pnpm icon

      - name: Install frontend dependencies
        if: matrix.platform == 'ubuntu-latest' # This must match the platform value defined above.
        run: |
          pnpm i
          pnpm icon

      - name: Build with VitePress
        if: matrix.platform == 'ubuntu-latest' # This must match the platform value defined above.
        run: pnpm run docs:build

      - name: Upload docs artifact
        if: matrix.platform == 'ubuntu-latest' # This must match the platform value defined above.
        uses: actions/upload-pages-artifact@v3
        with:
          path: packages/frontend/docs/.vitepress/dist

      - name: Build tauri app
        uses: tauri-apps/tauri-action@v0
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        with:
          projectPath: ./packages/backend
          args: ${{ matrix.args }}

      - name: Scan SDK
        run: |
          ls ./packages/backend/target/release/

      - name: Scan SDK
        run: |
          ls ./packages/sdk/

      - name: Assemble SDK (Windows)
        if: matrix.platform == 'windows-latest'
        run: |
          mv ./packages/backend/target/release/eracraft.exe ./packages/sdk/

      - name: Assemble SDK (Ubuntu)
        if: matrix.platform == 'ubuntu-latest'
        run: |
          mv ./packages/backend/target/release/eracraft ./packages/sdk/

      - name: Upload SDK (Windows)
        if: matrix.platform == 'windows-latest'
        uses: actions/upload-artifact@v4
        with:
          name: eracraft-sdk-windows-x64 ${{ github.ref_name }}
          path: packages/sdk/*

      - name: Upload SDK (Linux)
        if: matrix.platform == 'ubuntu-latest'
        uses: actions/upload-artifact@v4
        with:
          name: eracraft-sdk-linux-x64 ${{ github.ref_name }}
          path: packages/sdk/*

  # - name: Upload APP
  #   if: matrix.platform == 'windows-latest'
  #   uses: actions/upload-artifact@v4
  #   with:
  #     name: eracraft
  #     path: ./packages/sdk/eracraft.exe

  # - name: Upload SDK
  #   uses: softprops/action-gh-release@v2
  #   with:
  #     name: eracraft-sdk
  #     path: packages/sdk/*

  prepare-release:
    needs: build
    runs-on: ubuntu-latest
    permissions:
      contents: write
    steps:
      - uses: softprops/action-gh-release@v2
        with:
          draft: true

  create-release:
    needs: prepare-release
    runs-on: ubuntu-latest
    steps:
      - name: Download Artifacts
        uses: actions/download-artifact@v5
        with:
          path: artifacts/

      - name: Upload SDK
        uses: softprops/action-gh-release@v2
        with:
          files: artifacts/**/*

  deploy-pages:
    needs: build
    runs-on: ubuntu-latest
    permissions:
      id-token: write
    steps:
      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4
